<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="New Invoice"
                        android:textSize="25dp"
                        android:layout_weight="1" android:background="#65aaff" android:textColor="#ffffffff" android:typeface="serif"
                        android:textStyle="bold|italic"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:padding="5dp"
                        android:layout_weight="1"
                        android:weightSum="5.5"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:textSize="20dp" android:typeface="serif" android:gravity="center_vertical" android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:textSize="20dp"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:id="@+id/txtDate" android:typeface="serif" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:padding="5dp"
                        android:weightSum="5.5"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="Time"
                            android:textSize="20dp" android:typeface="serif" android:gravity="center_vertical" android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:textSize="20dp"
                            android:layout_height="match_parent"
                            android:text="Time"
                            android:id="@+id/txtTime" android:typeface="serif" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:padding="5dp"
                        android:weightSum="5.5"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="Routine ID"
                            android:textSize="20dp" android:typeface="serif" android:gravity="center_vertical" android:textStyle="bold"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:textSize="20dp"
                            android:layout_height="match_parent"
                            android:text="Routine ID"
                            android:id="@+id/txtRoutine" android:typeface="serif" android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="5.5" android:padding="5dp"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="Select Route"
                            android:textSize="20dp" android:typeface="serif" android:gravity="center_vertical" android:textStyle="bold"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/routeAuto" android:spinnerMode="dialog"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="5.5" android:padding="5dp"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="Select Outlet"
                            android:textSize="20dp" android:typeface="serif" android:gravity="center_vertical" android:textStyle="bold"/>
                    <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/outletAuto" android:spinnerMode="dialog"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="Debit Payments"
                        android:textSize="25dp"
                        android:layout_weight="1" android:background="#65aaff" android:textColor="#ffffffff" android:typeface="serif"
                        android:textStyle="bold|italic"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="5" android:padding="5dp"
                        android:layout_height="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Invoice No"
                            android:textSize="20dp" android:typeface="serif"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="20dp" android:typeface="serif"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:gravity="right"
                            android:textSize="20dp" android:typeface="serif"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:text="Paid"
                            android:gravity="right"
                            android:textSize="20dp" android:typeface="serif"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Balance"
                            android:textSize="20dp" android:typeface="serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pendingDetailsTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btnNext"
            android:clickable="true"
            android:background="@drawable/rounded_button"
            android:textSize="20dp" android:typeface="serif"/>
</LinearLayout>